@model SimpleWebFrontend.Models.LinkBillingAccountViewModel

@{
    ViewBag.Title = "Link";
}

<h2>Link a Billing Company</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>user</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-3" for="language_id">Company</label>
            <div class="col-md-9">
                @Html.DropDownList("CompanyID", String.Empty)
                @Html.ValidationMessageFor(model => model.CompanyID)
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-3" for="user_name">Username</label>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Username, new { size = "50" }) &nbsp;&nbsp;
                @Html.ValidationMessageFor(model => model.Username)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3" for="user_name">Password</label>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Password, new { size = "50" }) &nbsp;&nbsp;
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-9">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>