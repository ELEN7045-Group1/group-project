@model AccountPresentationSystem.Domain.Model.StatementHandler.Statement
@{
    ViewBag.Title = "Statement Details";
}

<h2>@ViewBag.Title</h2>


<table>
    <tr>
        <th colspan="10">Insert Company Here</th>
    </tr>
    <tr>
        <th style="width: 300px;">
            Account Number:
        </th>
        <td>
            @Model.StatementCommonFields.StatementAccountNumber
        </td>
    </tr>
    <tr>
        <th>
            Date:
        </th>
        <td>
            @Model.StatementCommonFields.StatementDate
        </td>
    </tr>
    <tr>
        <th>
            Statement Type:
        </th>
        <td>
            @Model.StatementType.StatementTypeName
        </td>
    </tr>

    <tr><td style="height:50px;">&nbsp;</td></tr>
    
    @foreach (AccountPresentationSystem.Domain.Model.StatementHandler.StatementSpecificFields fieldItem in Model.StatementSpecificFields)
    { 
        if ((fieldItem.StatementFieldName1.ToLower() == "total") || (fieldItem.StatementFieldName1.ToLower() == "subtotal"))
        {
            <tr><td style="height:50px">&nbsp;</td></tr>
        }
        <tr>
            <th>
                @fieldItem.StatementFieldName1
            </th>
            <td>
                @fieldItem.StatementFieldValue1
            </td>
        </tr>
    }
</table>

<br />
@Html.ActionLink("Back to statement list", "Index")